<h1>
  <%= I18n.t("message_mailer.you_have_new_message") %>
</h1>

<b><%= I18n.t("message_mailer.message.subject") %></b>
<blockquote>
  <p>
  <%= @message.conversation.subject %>
  </p>
</blockquote>

<b><%= I18n.t("message_mailer.message.body") %></b>
<blockquote>
  <p>
  <%= simple_format(@message.body) %>
  </p>
</blockquote>

<p>
  <%= link_to t("message_mailer.visit"),
              conversation_url(id: @message.conversation.id) %>
</p>
