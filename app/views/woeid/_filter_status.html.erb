<div class="filter_status">        
  <% if all %>
    <%= link_to "todos", ads_listall_path(type: 'give'),
      :class => status == "all" ? "actual" : "''" %>
    <%= link_to "disponible", ads_listall_status_path(type: 'give', status: 'available'),
      :class => status == "available" ? "actual" : "''" %>
    <%= link_to "reservado", ads_listall_status_path(type: 'give', status: 'booked'),
      :class => status == "booked" ? "actual" : "''" %>
    <%= link_to "entregado", ads_listall_status_path(type: 'give', status: 'delivered'),
      :class => status == "delivered" ? "actual" : "''" %>
  <% else %>
    <%= link_to "disponible", ads_woeid_path(id: id, type: 'give'),
      :class => status == "available" ? "actual" : "''" %>
    <%= link_to "reservado", ads_woeid_status_path(id: id, type: 'give', status: 'booked'), 
      :class => status == "booked" ? "actual" : "''" %>
    <%= link_to "entregado", ads_woeid_status_path(id: id, type: 'give', status: 'delivered'),
      :class => status == "delivered" ? "actual" : "''" %>
  <% end %>
</div>
