<% if @woeid.nil? %>
  <% content_for(:meta_title, t('nlt.home_title')) %>
<% else %>
  <% content_for(:meta_title, t('nlt.keywords') + @woeid[:full]) %>
  <% content_for(:meta_description, t('nlt.gift_on', woeid: @woeid[:full])) %>
<% end %>

<% if @woeid %>
  <% content_for :meta_extra do %>
    <link rel="alternate" type="application/rss+xml" title="nolotiro.org - <%= @woeid[:full] %>" href="<%= rss_type_url(woeid: @id, type: @type, status: @status) %>" />
  <% end %>
<% end %>

<% content_for :action do %>
  <div class="ad_change_location_home">
    <% if @woeid %>
      <%= link_to t('nlt.change_city'), location_ask_path %>
    <% elsif location_suggest %>
      <% title = t('nlt.view_ads_on', location: location_suggest.city) %>
      <%= link_to_change_location location_suggest.fullname, title %>
    <% else %>
      <%= link_to t('nlt.view_ads_on_your_city'), location_ask_path %>
    <% end %>
  </div>

  <div class="ad_create_tab">
    <% if @woeid%>
      <%= link_to "+ #{t('nlt.publish_ad_on', woeid: @woeid[:short])}", new_ad_path %>
    <% else %>
      <%= link_to "+ #{t('nlt.to_publish_ad')}", new_ad_path %>
    <% end %>
  </div>
<% end %>

<div class="col-md-9 col-sm-9 col-xs-12">
  <ul class="nav give-want-tabs">
    <li role="presentation" class="<%= 'active' if @type == "give" %>">
      <%= link_to t('nlt.gifts'),
                  url_for(params.except(:page, :status).merge(type: 'give')) %>
    </li>

    <li role="presentation" class="<%= 'active' if @type == "want" %>">
      <%= link_to t('nlt.requests'),
                  url_for(params.except(:page, :status).merge(type: 'want')) %>
    </li>
  </ul>

  <div id="location_header_section">
    <div class="location_name">
      <h1>
        <% if @woeid.nil? %>
          <%= t('nlt.all_ads') %>
        <% else %>
          <%= t('nlt.searching_on_html', q: @q) if @q %>

          <%= @woeid[:full] %>
        <% end %>
      </h1>

      <br>
      <%= render "ads/search", q: @q %>

      <%= link_to location_ask_path, class: "world_link" do %>
        <%= image_tag "change_location.png", alt: "change location" %>
        <%= t('nlt.change_city') %>
      <% end %>
    </div>
  </div>

  <% if @type == "give" %>
    <%= render "woeid/filter_status" %>
  <% end %>

  <% if @ads.any? %>
    <%= render 'ads/list_with_adsense', ads: @ads %>

    <%= render "partials/pagination", items: @ads %>
  <% else %>
    <% if @q %>
      <%= render "ads/no_results_search" %>
    <% else %>
      <%= render "ads/no_results" %>
    <% end %>
  <% end %>

  <% if @woeid %>
    <div class="rss">
      <%= link_to rss_type_path(woeid: @id, type: "give") do %>
        <%= image_tag "icons/rss.png", alt: t("nlt.rss_suscribe") %>
        &nbsp; <%= t('nlt.rss_suscribe') %> - <%= @woeid[:full] %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="col-md-3 col-sm-3 col-xs-12">
  <%= render 'partials/rankings_sidebar' %>
</div>
