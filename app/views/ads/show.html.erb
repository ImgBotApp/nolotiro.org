<%= content_for(:meta_title, "#{I18n.t('nlt.keywords')} #{@ad.title} #{@ad.woeid_name}") %>

<%= content_for :meta_description do %>
  <%= t('nlt.meta_description_ad', title: @ad.title, woeid: @ad.woeid_name, body: @ad.body) %>
<% end %>

<% content_for :action do %>
  <div class="ad_change_location_home">
    <%= link_to t('nlt.change_city'), location_ask_path %>
  </div>

  <div class="ad_create_tab">
    <%= link_to "+ #{ t('nlt.publish_ad_on', woeid: @ad.woeid_name_short) }", new_ad_path %>
  </div>
<% end %>

<div id="default_header_section">
  <h2>
    <%= link_to ads_woeid_path(id: @ad.woeid_code, type: @ad.type_class) do %>
      <%= @ad.woeid_name %> &gt;
      <%= @ad.type_string %>
    <% end %>
  </h2>
  <h1><%= @ad.title %></h1>
</div>

<div class="col-md-6 col-sm-6">
  <div class="ad_excerpt_show">
    <%= render "ads/actions", ad: @ad %>

    <% if @ad.image.exists? %>
      <div class="ad_list_image">
        <%= link_to image_tag(@ad.image.url(:thumb), alt: @ad.title), @ad.image.url, rel: 'superbox[image]', alt: t('nlt.click_to_large') %>
      </div>
    <% end %>

    <% if @ad.type_class == 'give' %>
      <span class="ad_status <%= @ad.status_class %>"><%= @ad.status_string %></span>
    <% end %>

    <span class="ad_date">
      <%= t('nlt.published_at_by_html', time: distance_of_time_in_words_to_now(@ad.published_at), user: link_to(@ad.user.username, profile_path(@ad.user))) %>
    </span>

    <div class="body-wrapper">
      <%= simple_format(@ad.body) %>
    </div>

    <%= render "stats", comments_count: @comments.size,
                        readed_count: @ad.readed_count %>

    <% if @ad.status_class == 'available' &&
          (current_user.nil? || current_user.whitelisting?(@ad.user)) %>
      <div class="ad_contact">
        <%= t('nlt.are_you_interested') %>

        <%= link_to new_conversation_path(recipient_id: @ad.user_owner,
                                          subject: @ad.slug),
                    class: "world_link" do %>
          <%= t('nlt.send_a_message') %>
          <%= image_tag "email_send.png", alt: t('nlt.send_a_message') %>
        <% end %>
      </div>
    <% end %>

    <div class="sharelinks">
      <p><%= t('nlt.share_this_ad') %>:</p>
      <%= render "partials/social_buttons", url: ad_url(@ad) %>
    </div>
  </div>

  <div class="ad_excerpt_comments">
    <%= render "comments/list", comments: @comments %>
  </div>
</div>

<div class="col-md-6 col-sm-6">
  <div class="google_ad_wrapper">
    <%= render "partials/google_adsense", class_name: "google_adsense_336_280", ad_slot: "7225596067" %>
  </div>
</div>
