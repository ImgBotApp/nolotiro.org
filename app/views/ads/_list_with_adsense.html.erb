<% ads.each_with_index do |ad, i| %>
  <div class="ad_excerpt_list">
    <%= render "ads/actions", ad: ad %>

    <%= render "ads/ad", ad: ad %>
  </div>

  <% if [5, 10, 15].include?(i) %>
    <div class="ad_excerpt_list">
      <%= render "partials/google_adsense", class_name: "desktop google_adsense_336_280", ad_slot: "7225596067" %>
      <%= render "partials/google_adsense", class_name: "mobile google_adsense_320_100", ad_slot: "1977811266" %>
    </div>
  <% end %>
<% end %>
