<div class="ad_excerpt_list">
  <%= render "ads/actions", ad: ad %>

  <% if ad.image.exists? %>
    <div class="ad_list_image">
      <%= link_to adslug_path(ad,ad.slug) do %>
        <%= image_tag ad.image.url(:thumb), title: ad.title, alt: ad.title %>
      <% end %>
    </div>
  <% end %>

  <h4>
    <%= link_to adslug_path(ad,ad.slug) do %>
      <%= ad.title %>
    <% end %>
  </h4>
  <div class="ad_excerpt_woeid">
    <%= link_to ads_woeid_path(id: ad.woeid_code, type: ad.type_class) do %>
      <%= ad.woeid_name %> &gt;
      <%= ad.type_string %>
    <% end %>
  </div>
  <% if ad.give? %>
    <span class="ad_status <%= ad.status_class %>">
      <%= ad.status_string %>
    </span>
  <% end %>
  <span class="ad_date">
    <%= t('nlt.published_on_html', date: ad.published_at) %>
    <%= t('nlt.by_user') %>
    <%= link_to ad.user.username, profile_path(ad.user) %>
  </span>

  <div class="ad_body">
    <p><%= truncate ad.body, length: 200, separator: ' ' %></p>
  </div>

  <%= render "ads/stats", comments_count: comment_counts[ad.id] || 0,
                          readed_count: ad.readed_count %>
</div>
