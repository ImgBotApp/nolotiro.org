<div class="ad_excerpt_list">
  <%= render "ads/actions", ad: ad %>

  <% if ad.image.exists? %>
    <div class="ad_list_image">
      <%= link_to adslug_path(ad, ad.slug) do %>
        <%= image_tag ad.image.url(:thumb), title: ad.filtered_title,
                                            alt: ad.filtered_title %>
      <% end %>
    </div>
  <% end %>

  <h4>
    <%= link_to adslug_path(ad, ad.slug) do %>
      <%= ad.filtered_title %>
    <% end %>
  </h4>
  <div class="ad_excerpt_woeid">
    <%= link_to ads_woeid_path(ad.woeid_code, type: ad.type) do %>
      <%= ad.woeid_name %> &gt;
      <%= ad.type_string %>
    <% end %>
  </div>
  <% if ad.give? %>
    <span class="ad_status <%= ad.status %>">
      <%= ad.status_string %>
    </span>
  <% end %>

  <%= published_ago_by(ad.published_at, ad.user) %>

  <div class="body-wrapper">
    <p><%= truncate ad.filtered_body, length: 200, separator: ' ' %></p>
  </div>

  <%= render "ads/stats", comments_count: comment_counts[ad.id] || 0,
                          readed_count: ad.readed_count %>
</div>
