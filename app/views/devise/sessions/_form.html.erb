<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <fieldset>
    <div class="col-md-6 col-sm-6">
      <dt>
        <%= f.label :email, t('nlt.your_email'), required: true %>
      </dt>

      <dd>
        <%= f.email_field :email, autofocus: true %>
      </dd>

      <dt>
        <%= f.label :password, t('nlt.password'), required: true %>
      </dt>

      <dd>
        <%= f.password_field :password %>
      </dd>

      <dd id="rememberme-element">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t('nlt.remember_me') %>
      </dd>

      <div><%= f.submit t('nlt.sign_in') %></div>

      <%= render "devise/shared/links" %>
    </div>

    <div class="col-md-6 col-sm-6">
      <%= render "devise/shared/omniauth_links" %>
    </div>
  </fieldset>
<% end %>
