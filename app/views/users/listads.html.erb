<% content_for :title, "#{t('nlt.published_ads')} - #{@user.username}" %>

<div class="main-row">
  <div class="col-md-9 col-sm-9">
    <%= render "users/tabnav", user: @user %>

    <div class="default_header_section">
      <h1><%= content_for :title %></h1>
    </div>

    <div class="unpadded_content_section">
      <%= render "filter_status" %>

      <% if @ads.any? %>
        <%= render 'ads/list_with_adsense', ads: @ads %>

        <%= paginate @ads, window: 1 %>
      <% else %>
        <div class="empty">
          <%= t("nlt.no_results.on_user") %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-3 col-sm-3">
    <div class="google_ad_wrapper">
      <%= render "partials/raw_google_adsense", class_name: "desktop google_adsense_600_160", ad_slot: "6783776462" %>
      <%= render "partials/google_adsense", class_name: "mobile google_adsense_300_250", ad_slot: "8702329269" %>
    </div>
  </div>
</div>
