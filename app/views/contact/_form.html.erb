<%= form_for contact do |f| %>
  <fieldset>
    <%= errors_for(contact) %>

    <dl>
      <% unless user_signed_in? %>
        <dt>
          <%= f.label :email, class: 'required' %>
        </dt>
        <dd>
          <%= f.text_field :email, type: :email, required: 'required' %>
        </dd>
      <% end %>
      <dt>
        <%= f.label :message, class: 'required' %><br />
      </dt>
      <dd>
        <%= f.text_area :message, size: '24x10' %>
      </dd>
      <dt></dt>
      <dd>
        <%= recaptcha %>
      </dd>
      <dt>&nbsp;</dt>
      <dd>
        <%= f.submit t('nlt.send') %>
      </dd>
    </dl>
  </fieldset>
<% end %>
