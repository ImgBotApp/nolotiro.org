<% title = t('nlt.contact_form') %>
<% content_for :title, title %>

<div class="default_header_section">
  <h1><%= title.to_s %></h1>
  <br>
  <%= t('nlt.contact_legend_html',
        new_ad_link: link_to(t('nlt.here'), new_ad_path)) %>
</div>

<div class="default_content_section">
  <div class="row">
    <div class="col-md-8 col-sm-8">
      <%= render 'form', contact: @contact %>
    </div>
  </div>
</div>
