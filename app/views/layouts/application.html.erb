    <%= csrf_meta_tags %>

    <%= meta_description %>

    <% if content_for?(:meta_extra) %>
      <%= yield(:meta_extra) %>
    <% end %>

    <meta name='viewport' content='width=device-width, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no' />

    <link rel="alternate" href="<%= localized_url(nil) %>" hreflang="x-default" />
