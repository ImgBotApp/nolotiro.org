<!DOCTYPE html>
<html>
  <head>
    <title><%=h yield(:meta_title) %> - nolotiro.org</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

    <script src="//www.google.com/jsapi"></script>
    <%= airbrake_javascript_notifier %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

    <%= csrf_meta_tags %>
    <!-- TODO: RSS -->

    <% if content_for?(:extra_meta) %>
      <%= yield(:extra_meta) %>
    <% end %>

    <!-- FIXME: Other languages - move to helper -->
    <% %w(es en ca gl eu nl de fr pt it).each do |l|  %>
      <meta data="lang" href="<%= l %>">
    <% end %>

