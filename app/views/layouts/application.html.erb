  <body>
    <div class="container">

      <div id="header">

        <% cache('select_language_box') do %>
          <%= render :partial => "partials/select_language_box" %>
        <% end %>

        <%= render :partial => "partials/user_actions" %>

        <div class="site-name">
          <%= link_to root_path, :title => "nolotiro.org home", "data-no-turbolink" => true do %>
            <%= image_tag "nolotiro_logo.png", :alt => "nolotiro.org", :id => "logo" %>
            nolotiro.org -
            <%=h yield(:title) %>
          <% end %>
        </div>

        <div class="site-slogan">
          <%= t('nlt.slogan') %>
        </div>

        <% if content_for?(:action) %>
          <%= yield(:action) %>
        <% end %>

      </div>

      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <p class="<%= name %>">
          <%= msg %>
          </p>
        <% end %>
      <% end %>

      <% if Rails.env.development? || Rails.env.staging? %>
        <p class="notice">
          <%= t('nlt.beta_warning') %>
        </p>
      <% end %>

      <%= yield %>

      <%= render :partial => "partials/footer", :locals => { :url => "http://nolotiro.org" } %>

    </div>

