    <!-- TODO i18n -->
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/es_ES/sdk.js#xfbml=1&version=v2.3&appId=400046993432649";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <% if user_signed_in? %>
      <%= render "partials/announcement",
                 announcement: Announcement.pick_pending_for(current_user) %>
    <% end %>

    <div class="container">

      <div id="header">
        <%= render "partials/header" %>

        <div class="main-banner">
          <%= render "partials/google_adsense", class_name: "desktop google_adsense_728_90", ad_slot: "9326281262" %>
          <%= render "partials/google_adsense", class_name: "mobile google_adsense_320_100", ad_slot: "1977811266" %>
        </div>
      </div>

      <% unless I18n.locale == :es %>
        <div id="advice_langtest" class="advice">
          This language translation is in testing phase. If you find a missing or wrong translation, <%= link_to "please report it", "http://accounts.localeapp.com/projects/6872/translations?in_locale=#{ i18n_to_localeapp_in_locale(I18n.locale) }" %>.
        </div>
      <% end %>

      <div id="main">
        <%= render "partials/flash" %>

        <%= yield %>
      </div>

      <% cache do %>
        <%= render "partials/footer", url: "https://nolotiro.org" %>
      <% end %>

    </div>

