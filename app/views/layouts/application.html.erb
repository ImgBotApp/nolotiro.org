<!DOCTYPE html>
<html>
  <head>
    <!-- TODO: dynamic titles -->
    <title>nolotiro.org</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">

      <!-- TODO show when there is an alert -->
      <p class="notice hide"><%= notice %></p>
      <p class="alert hide"><%= alert %></p>

      <div id="header">

        <%= render :partial => "partials/select_language_box" %>

        <%= render :partial => "partials/user_actions" %>

        <div class="site-name">
          <a href="/es" title="nolotiro.org home">
            <%= image_tag "nolotiro_logo.png", :alt => "nolotiro.org", :id => "logo" %>
            nolotiro.org -
            <!-- TODO: dynamic titles -->
          </a>
        </div>

        <div class="site-slogan">
          <%= t('nlt.slogan') %>
        </div>

      </div>

      <%= yield %>

      <%= render :partial => "partials/footer", :locals => { :url => "http://nolotiro.org" } %>

    </div>

  </body>
</html>
