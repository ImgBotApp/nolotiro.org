<% if message.sender == message.conversation.originator %>
  <div class="message-excerpt">
    <div class="message-from-left">
      <% if message.sender %>
        <%= link_to profile_path(message.sender.username) do %>
          <%= image_tag "contact.png" %>
          <%= message.sender.username %>
        <% end %>
      <% else %>
        <%= image_tag "contact.png" %>
        [borrado]
      <% end %>
    </div>
    <div class="message-container-right">
      <div class="triangle-me">
      </div>
      <div class="bubble bg-bubble-me">
        <div class="message-date">
          <%= time_ago_in_words(message.created_at) %>
        </div>
        <%= simple_format(message.body) %>
      </div>
    </div>
  </div>
<% else %>
  <div class="message-excerpt">
    <div class="message-from-right">
      <% if message.sender %>
        <%= link_to profile_path(message.sender.username) do %>
          <%= image_tag "contact.png" %>
          <%= message.sender.username %>
        <% end %>
      <% else %>
        <%= image_tag "contact.png" %>
        [borrado]
      <% end %>
    </div>
    <div class="message-container-left">
      <div class="triangle-other">
      </div>
      <div class="bubble">
        <div class="message-date">
          <%= time_ago_in_words(message.created_at) %>
        </div>
        <%= simple_format(message.body) %>
      </div>
    </div>
  </div>
<% end %>
