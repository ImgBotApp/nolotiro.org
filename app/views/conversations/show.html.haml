- title = t("conversations.show.title_html",
            recipient: link_to_interlocutor(@conversation),
            subject: @conversation.subject)

- content_for :meta_title, title

#default_header_section
  %h5
    = link_to t("conversations.buttons.back"), conversations_path
  %h1
    = title
  = link_to t("conversations.buttons.trash"),
            trash_conversation_path(@conversation),
            class: :button,
            method: :delete

.col-md-7.col-sm-7#messages-thread
  - @conversation.messages_for(current_user).includes(:sender).each do |mes|
    = render "message", message: mes

  - if policy(@conversation).update?
    = render "reply", message: @message

.col-md-5.col-sm-5
  .row.mobile
    = render "partials/google_adsense", class_name: "google_adsense_336_280", ad_slot: "7225596067"
  .row.desktop
    = render "partials/google_adsense", class_name: "google_adsense_300_250", ad_slot: "8702329269"
