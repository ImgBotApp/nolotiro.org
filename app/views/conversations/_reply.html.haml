.message-excerpt
  .message-from-left
    = link_to profile_path(current_user) do 
      = image_tag "contact.png"
      = current_user.username 
  .message-container-right
    .triangle-me 
    .bubble-reply.bg-bubble-me
      #reply
        = form_for message,
                   url: mailboxer_conversation_path(message.conversation),
                   method: :put do |f|
          = errors_for(message)
          = f.hidden_field :conversation_id
          = f.text_area :body, size: '80x3', maxlength: 1500
          %p.description
            = t 'mailboxer.new.body_max'
          = f.submit t('mailboxer.new.button')
