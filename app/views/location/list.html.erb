<% content_for :title, t('nlt.change_town.choose') %>

<div class="main-row">
  <div class="col-md-6 col-sm-6">
    <div class="default_header_section">
      <h1><%= content_for :title %></h1>
    </div>

    <div class="default_content_section">
      <% if @locations.any? %>
        <%= render "list_form", locations: @locations %>
      <% else %>
        <p class="error">
          <%= t('nlt.change_town.choose_html', location: params[:location]) %>
        </p>

        <%= render "ask_form" %>
      <% end %>
    </div>
  </div>

  <div class="col-md-6 col-sm-6">
    <div class="google_ad_wrapper">
      <%= render "partials/google_adsense", class_name: "google_adsense_300_250", ad_slot: "8702329269" %>
    </div>
  </div>
</div>
