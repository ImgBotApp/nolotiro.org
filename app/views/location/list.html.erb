<% title = t('nlt.change_town.choose') %>
<%= content_for :meta_title, title %>

<div class="default_header_section">
  <h1><%= title.to_s %></h1>
</div>

<div class="col-md-6 col-sm-6">
  <div class="row">
    <% if @locations.nil? %>
      <p class="error"><%= t('nlt.change_town.choose_html', location: params[:location]) %></p>
      <%= render "ask_form" %>
    <% else %>
      <%= render "list_form", locations: @locations %>
    <% end %>
  </div>
</div>

<div class="col-md-6 col-sm-6">
  <%= render "partials/google_adsense", class_name: "google_adsense_336_280", ad_slot: "7225596067" %>
</div>
