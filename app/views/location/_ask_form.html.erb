<%= form_tag({action: "list"}) do %>
  <fieldset>
    <dl>
      <dt>
      <label for="location" class="required">
        <%= t('nlt.change_town.town') %>
      </label>
      </dt>
      <dd>
      <%= text_field_tag(:location) %>
      </dd>
      <dt>&nbsp;</dt>
      <dd>
      <%= submit_tag(t('nlt.change_town.submit')) %>
      </dd>
    </dl>

    <% if location_suggest %>
      <%= t('nlt.change_town.close_to') %>
      <br>
      <b>
        <%= link_to_change_location location_suggest %>
      </b>
    <% end %>
  </fieldset>
<% end %>
