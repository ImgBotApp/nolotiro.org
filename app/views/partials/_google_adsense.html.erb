<div class="google_ads">    
  <% if Rails.env.development? %>
    <img src="http://placehold.it/<%= ad_width %>x<%= ad_height %>">
  <% else %>
    <div id="adsense-<%= id %>"></div>    
    <script>    
    window.MyAdSense.newAd(document.getElementById("adsense-<%= id %>"), {          
      'ad_slot': "<%= ad_slot %>",    
      'ad_width': <%= ad_width %>,    
      'ad_height': <%= ad_height %>    
    });    
    </script>    
  <% end %>

  <% if ad_height == 600%>
