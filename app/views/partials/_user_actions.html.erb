
<% if user_signed_in? %>
  <div class="user_login_box">
    hola,
    <b>
      <%= link_to current_user.username, profile_path(current_user) %>
    </b> | 
    <a title="<%= current_user.unread_messages_count %> unread mensajes" href="/es/message/list">
      <%= image_tag "icons/ico_email.gif" %>
      &nbsp;<b><%= current_user.unread_messages_count %></b>
    </a> |
    <%= link_to "salir", destroy_user_session_path, :method => :delete %>
  </div>
<% else %>
  <div class="user_login_box">
    <%= link_to "nuevo usuario", new_user_registration_path, "data-no-turbolink" => true %>
    o
    <a href="/es/auth/login">
      acceder
    </a>
  </div>

<% end %>
