<% if user_signed_in? %>
  <% Announcement.current.pending_for(current_user).each do |announcement| %>
    <%= div_for announcement do %>
      <%= announcement.message %>

      <%= link_to 'Ocultar',
                  announcement_dismissals_path(announcement_id: announcement.id),
                  method: :post %>
    <% end %>
  <% end %>
<% end %>
