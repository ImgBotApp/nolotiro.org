<% cache('section_locations') do %>
  <div class="section_locations">
    <h2><%= t('nlt.cities_in_the_world') %></h2>
    <br>
    <ul>
      <% AdHelper.get_locations_ranking.each do |loc| %>
        <li>
        <%= link_to ads_woeid_path(loc[0], :type => "give") do %>
          <%= WoeidHelper.convert_woeid_name loc[0] %> (<%= loc[1] %>) 
        <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
